@model List<Movie>

<div class="container">
    <h1>Movies</h1>

    <a asp-action="New" class="btn btn-primary">New Movie</a>

    @if (Model.Count == 0)
    {
        <p>We don't have any movies yet</p>
    }
    else
    {
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-black">Movie</th>
                <th class="text-black">Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Movie movie in Model)
            {
                <tr>
                    <td><a asp-action="Edit" asp-route-id="@movie.Id">@movie.Name</a></td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>
