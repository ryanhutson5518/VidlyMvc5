@model List<Customer>

<div class="container">
    <h1>Customers</h1>

    @if (Model.Count == 0)
    {
        <p>We don't have any customers yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th class="text-black">Customer</th>
                    <th class="text-black">Discount Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customer customer in Model)
                {
                    <tr>
                        <td class="text-black"><a asp-action="Edit" asp-route-id="@customer.Id">@customer.Name</a></td>
                        <td class="text-black">@customer.MembershipType.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>